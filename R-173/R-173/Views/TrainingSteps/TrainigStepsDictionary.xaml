<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:R_173.Views.TrainingSteps">

    <Style x:Key="TrainingStep" TargetType="CheckBox">
        <Setter Property="IsEnabled" Value="False" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <Border x:Name="Text" Background="LightGray">
                        <TextBlock Text="{TemplateBinding Content}" 
                                   VerticalAlignment="Center"
                                   Padding="5" 
                                   TextAlignment="Center"
                                   TextWrapping="Wrap" 
                                   FontWeight="Bold" 
                                   FontSize="10" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="Text" Property="Background" Value="Green" />
                        </Trigger>
                        <Trigger Property="IsChecked" Value="{x:Null}">
                            <Setter TargetName="Text" Property="Background" Value="Yellow" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <ControlTemplate x:Key="ArrowRight">
        <Grid VerticalAlignment="Center">
            <Line X1="17" X2="25" Y1="0" Y2="5" StrokeThickness="3" Stroke="Black" />
            <Line X1="0" X2="26" Y1="5" Y2="5" StrokeThickness="3" Stroke="Black" />
            <Line X1="17" X2="25" Y1="10" Y2="5" StrokeThickness="3" Stroke="Black" />
        </Grid>
    </ControlTemplate>
    
    <ControlTemplate x:Key="ArrowLeft">
        <Grid VerticalAlignment="Center">
            <Line X1="9" X2="1" Y1="0" Y2="5" StrokeThickness="3" Stroke="Black" />
            <Line X1="0" X2="26" Y1="5" Y2="5" StrokeThickness="3" Stroke="Black" />
            <Line X1="9" X2="1" Y1="10" Y2="5" StrokeThickness="3" Stroke="Black" />
        </Grid>
    </ControlTemplate>
    
</ResourceDictionary>